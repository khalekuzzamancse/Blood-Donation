<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.blooddonation" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodDonation"
        tools:targetApi="31" >
        <activity
            android:name=".Activity_UpdateProfile"
            android:parentActivityName=".Activity_ReadUserProfile"
            android:exported="false" />
        <activity
            android:name=".Activity_Account_Delete"
            android:parentActivityName=".Activity_ReadUserProfile"
            android:exported="false" />
        <activity
            android:name=".Acitivity_SearchResult_Recycler"
            android:parentActivityName=".Activity_SearchBlood"
            android:exported="false" />
        <activity
            android:name=".Activity_ReadUserProfile"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity_WhyDonateBlood"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity_AboutUs"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Activity_SearchBlood"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity_ContactSendMessage"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity_Become_Donar"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity_Register"
            android:parentActivityName=".Activity_Login"
            android:exported="false" />
        <activity
            android:name=".Activity_Login"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>