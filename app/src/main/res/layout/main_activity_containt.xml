<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="50dp"
    tools:layout_editor_absoluteY="7dp">


    <TextView
        android:background="@drawable/background_about_us"
        android:backgroundTint="#FFEB3B"
        android:padding="10dp"
        android:elevation="8dp"
       android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/SearchBloodMain_Activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:drawableLeft="@drawable/icon_search"
        android:gravity="center"
        android:text="Search Blood"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:drawableTint="@color/black"
        android:background="@drawable/background_about_us"
        android:backgroundTint="#FFEB3B"
        android:padding="10dp"
        android:elevation="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/All_DonorList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_list"
        android:gravity="center"
        android:text="All Donor List"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:background="@drawable/background_about_us"
        android:backgroundTint="#FFEB3B"
        android:padding="10dp"
        android:elevation="8dp"
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:drawableTint="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:drawableLeft="@drawable/icon_helpline"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Help Line"
        app:layout_constraintEnd_toStartOf="@+id/All_DonorList"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/SearchBloodMain_Activity"
        app:layout_constraintTop_toBottomOf="@+id/SearchBloodMain_Activity" />

    <TextView
        android:background="@drawable/background_about_us"
        android:backgroundTint="#FFEB3B"
        android:padding="10dp"
        android:elevation="8dp"
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:drawableLeft="@drawable/icon_person"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:text="Total User"
        android:gravity="center"
        android:drawableTint="@color/black"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/SearchBloodMain_Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/SearchBloodMain_Activity"
        app:layout_constraintTop_toTopOf="@+id/SearchBloodMain_Activity" />


</androidx.constraintlayout.widget.ConstraintLayout>