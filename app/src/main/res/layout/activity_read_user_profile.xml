<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_purple"
    tools:context=".Activity_ReadUserProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Activity_showProfile_Profile_Image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:elevation="6dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Activity_showProfile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_purple"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/Activity_showProfile_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/icon_person"
                android:gravity="start"

                android:text="Name"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Activity_showProfile_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_email"
                android:gravity="start"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_Name"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_Name" />

            <TextView
                android:id="@+id/Activity_showProfile_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_phone_number"
                android:gravity="start"
                android:text="Phone"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_Email"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_Email" />

            <TextView
                android:id="@+id/Activity_showProfile_BloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_blood_group"
                android:gravity="start"
                android:text="A+"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_Phone"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_Phone" />

            <TextView
                android:id="@+id/Activity_showProfile_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_gender"
                android:gravity="start"
                android:text="Gender"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_BloodGroup"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_BloodGroup" />

            <TextView
                android:id="@+id/Activity_showProfile_District"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_locaion"
                android:gravity="start"
                android:text="District"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_Gender"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_Gender" />

            <TextView
                android:id="@+id/Activity_showProfile_subDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_locaion"
                android:gravity="start"
                android:text="Sub District"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_District"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_District" />

            <TextView
                android:id="@+id/Activity_showProfile_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_age"
                android:gravity="center"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Activity_showProfile_subDistrict"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_subDistrict" />

            <Button
                android:id="@+id/Activity_showProfile_Button_Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="Update"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Activity_showProfile_Age" />

            <Button
                android:id="@+id/Activity_showProfile_Button_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/Activity_showProfile_Button_Update"
                app:layout_constraintTop_toTopOf="@+id/Activity_showProfile_Button_Update" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>