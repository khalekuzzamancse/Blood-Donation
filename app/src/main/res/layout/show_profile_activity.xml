<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/medium_purple"
    tools:context=".ShowProfile_Activity">

    <include
        android:id="@+id/ActivityScrollable_IncludedToolbar"
        layout="@layout/toolbar_for_show_profile"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/Activity_showProfile_Profile_Image"
        android:layout_width="111dp"
        android:layout_height="91dp"
        android:elevation="6dp"
        android:src="@drawable/profile_image"
       />

            <TextView
                android:id="@+id/name_TV"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_person"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
               />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/email_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_email"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/phone_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_phone_number"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
              />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/blood_group_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_blood_group"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
               />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/gender_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_gender"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
               />

            <TextView
                android:id="@+id/district_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/icon_locaion"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
             />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/sub_district_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_locaion"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="16sp"
               />

            <TextView
                android:layout_margin="3dp"
                android:id="@+id/age_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_age"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
</LinearLayout>