<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity_Register">

    <include
        android:id="@+id/ActivityScrollable_IncludedToolbar"
        layout="@layout/layout_toolbar_for_non_home_activity"
      />

    <ScrollView
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ActivityScrollable_IncludedToolbar"
        app:layout_constraintStart_toStartOf="@+id/ActivityScrollable_IncludedToolbar"


        app:layout_constraintTop_toBottomOf="@+id/ActivityScrollable_IncludedToolbar">

        <include layout="@layout/activity_register" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>