<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DADECBF8"
    android:layout_height="220dp">

    <TextView
        android:id="@+id/NavbarHeader_Name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/NavbarHeader_Image"
        app:layout_constraintTop_toBottomOf="@+id/NavbarHeader_Image" />

    <TextView
        android:textSize="15sp"
        android:textColor="@color/black"
        android:id="@+id/NavbarHeader_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/NavbarHeader_Name"
        app:layout_constraintTop_toBottomOf="@+id/NavbarHeader_Name" />

    <ImageView

        android:layout_marginTop="30dp"
        android:id="@+id/NavbarHeader_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_blood_group" />

</androidx.constraintlayout.widget.ConstraintLayout>